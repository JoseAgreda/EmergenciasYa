<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <!-- Button Grid -->
        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Row 1 -->
            <Button
                android:id="@+id/btnReportIncident"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/registro_de_incidentes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnFirstAid"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/primeros_auxilios"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"
                android:gravity="center"/>

            <!-- Row 2 -->
            <Button
                android:id="@+id/btnAlarm"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/alarma"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnLocation"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/localizaci_n"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <!-- Row 3 -->
            <Button
                android:id="@+id/btnTrustedContacts"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/contactos_de_confianza"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnOfficialNumbers"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/numeros_oficiales"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <!-- Row 4 -->
            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/configuracion"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/ayuda"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <!-- Row 5 -->
            <Button
                android:id="@+id/btnAbout"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/acerca_de"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:text="@string/salir"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_margin="8dp"/>
        </GridLayout>

    </LinearLayout>
</ScrollView>
