<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Nombre + número -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre contacto"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/numeroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-0000"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Botón llamar -->
    <ImageButton
        android:id="@+id/llamarButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Llamar"
        android:src="@android:drawable/ic_menu_call" />

    <!-- Botón SMS -->
    <ImageButton
        android:id="@+id/smsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Enviar SMS"
        android:src="@android:drawable/ic_dialog_email" />

    <!-- Botón eliminar -->
    <ImageButton
        android:id="@+id/eliminarButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Eliminar"
        android:src="@android:drawable/ic_menu_delete" />

</LinearLayout>
