<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:id="@+id/main"
    tools:context=".ConfiguracionActivity">

    <!-- Barra de la aplicación con título y fondo rojo -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Configuración"
            app:titleTextColor="@android:color/white"
            android:background="#C62828" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- ========= SECCIÓN GENERAL ========= -->
            <TextView
                style="@style/SettingsCategoryTitle"
                android:text="General" />

            <!-- Opción Idioma (Clickeable) -->
            <LinearLayout
                android:id="@+id/option_language"
                style="@style/SettingsItem"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_languaje" android:contentDescription="Icono de idioma" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Idioma" />
                    <TextView
                        android:id="@+id/tv_current_language"
                        style="@style/SettingsItemSubtitle"
                        android:text="Español" />
                </LinearLayout>
                <ImageView style="@style/SettingsItemArrow" />
            </LinearLayout>

            <!-- Opción Cerrar Sesión -->
            <LinearLayout
                android:id="@+id/option_logout"
                style="@style/SettingsItem"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView style="@style/SettingsItemIcon"
                    app:tint="#D32F2F"
                    android:contentDescription="Icono de cerrar sesión" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView
                        style="@style/SettingsItemTitle"
                        android:text="Cerrar sesión"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/SettingsDivider" />

            <!-- ========= SECCIÓN ACERCA DE ========= -->
            <TextView
                style="@style/SettingsCategoryTitle"
                android:text="Acerca de" />

            <!-- Opción Versión de la app -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_info" android:contentDescription="Icono de información" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Versión de la app" />
                    <TextView style="@style/SettingsItemSubtitle" android:text="1.0.0" />
                </LinearLayout>
            </LinearLayout>

            <!-- Opción Términos y Política de Privacidad -->
            <LinearLayout
                android:id="@+id/option_privacy"
                style="@style/SettingsItem"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_policy" android:contentDescription="Icono de política de privacidad"/>
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Términos y política de privacidad" />
                </LinearLayout>
                <ImageView style="@style/SettingsItemArrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
