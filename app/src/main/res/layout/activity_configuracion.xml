<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ConfiguracionActivity">

    <!-- Barra de la aplicación con título y fondo rojo -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Configuración"
            app:titleTextColor="@android:color/white"
            android:background="#C62828" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- ========= SECCIÓN GENERAL ========= -->
            <TextView
                style="@style/SettingsCategoryTitle"
                android:text="General" />

            <!-- Opción Idioma -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_language" android:contentDescription="Icono de idioma" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Idioma" />
                    <TextView style="@style/SettingsItemSubtitle" android:text="Español" />
                </LinearLayout>
            </LinearLayout>

            <!-- Opción Tema Oscuro -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_dark_mode" android:contentDescription="Icono de tema oscuro" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Tema oscuro" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/SettingsDivider" />

            <!-- ========= SECCIÓN ACCESIBILIDAD ========= -->
            <TextView
                style="@style/SettingsCategoryTitle"
                android:text="Accesibilidad" />

            <!-- Opción Tamaño de letra -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_text_size" android:contentDescription="Icono de tamaño de texto"/>
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Tamaño de letra" />
                    <TextView style="@style/SettingsItemSubtitle" android:text="Normal" />
                </LinearLayout>
            </LinearLayout>

            <!-- Opción Contraste Alto -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_contrast" android:contentDescription="Icono de contraste" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Contraste alto" />
                </LinearLayout>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_high_contrast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/SettingsDivider" />

            <!-- ========= SECCIÓN ACERCA DE ========= -->
            <TextView
                style="@style/SettingsCategoryTitle"
                android:text="Acerca de" />

            <!-- Opción Versión de la app -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_info" android:contentDescription="Icono de información" />
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Versión de la app" />
                    <TextView style="@style/SettingsItemSubtitle" android:text="1.0.0" />
                </LinearLayout>
            </LinearLayout>

            <!-- Opción Términos y Política de Privacidad -->
            <LinearLayout style="@style/SettingsItem">
                <ImageView style="@style/SettingsItemIcon" android:src="@drawable/ic_policy" android:contentDescription="Icono de política de privacidad"/>
                <LinearLayout style="@style/SettingsItemTextContainer">
                    <TextView style="@style/SettingsItemTitle" android:text="Términos y política de privacidad" />
                </LinearLayout>
                <ImageView style="@style/SettingsItemArrow" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
